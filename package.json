{
  "name": "pato-frontend",
  "version": "1.4.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@diamondlightsource/ui-components": "^1.3.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fullcalendar/core": "^6.1.10",
    "@fullcalendar/daygrid": "^6.1.10",
    "@fullcalendar/react": "^6.1.10",
    "@fullcalendar/timegrid": "^6.1.10",
    "@tanstack/react-query": "^4.36.1",
    "framer-motion": "^10.18.0",
    "molstar": "^3.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.21.2"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "REACT_APP_AUTH_ENDPOINT=auth/ jest --logHeapUsage",
    "format": "prettier --jsx-single-quote --print-width 100 --write src/**/*.{ts,tsx,css} --trailing-comma es5",
    "demo": "REACT_APP_DEPLOY_TYPE=demo HTTPS=false REACT_APP_AUTH_ENDPOINT=http://localhost/auth/ REACT_APP_API_ENDPOINT=http://localhost/ react-app-rewired start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@svgr/webpack": "^8.1.0",
    "@tanstack/react-query-devtools": "^4.36.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "babel-loader": "^9.1.3",
    "babel-plugin-named-asset-import": "^0.3.8",
    "babel-preset-react-app": "^10.0.1",
    "bfj": "^8.0.0",
    "browserslist": "^4.22.2",
    "camelcase": "^8.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "css-loader": "^6.9.0",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-webpack-plugin": "^4.0.1",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.2.0",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-resolve": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "mini-css-extract-plugin": "^2.7.7",
    "msw": "^1.3.2",
    "prettier": "^3.2.3",
    "react-app-polyfill": "^3.0.0",
    "react-dev-utils": "^12.0.1",
    "react-refresh": "^0.14.0",
    "resolve": "^1.22.8",
    "resolve-url-loader": "^5.0.0",
    "semver": "^7.5.4",
    "source-map-loader": "^4.0.2",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-dev-server": "^4.15.1",
    "webpack-manifest-plugin": "^5.0.0",
    "whatwg-fetch": "^3.6.20",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "resolutions": {
    "nwsapi": "2.2.2"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/mocks",
      "src/utils/generic.tsx"
    ],
    "coverageProvider": "v8",
    "coverageReporters": [
      "json",
      "text",
      "cobertura"
    ],
    "maxWorkers": 3,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^d3-(.*)$": "<rootDir>/node_modules/d3-$1/dist/d3-$1",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/jest.setup.ts"
    ],
    "transform": {
      "^.+\\.js": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(molstar)/)"
    ],
    "workerIdleMemoryLimit": "750MB",
    "testEnvironmentOptions": {
      "customExportConditions": []
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "packageManager": "yarn@4.0.2"
}
